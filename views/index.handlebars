<div class="container">

  <div class="row justify-content-center">
    <h1>EAT-Da-BURGER!</h1>
  </div>


  <img src="/assets/img/burger-icon.jpg" alt="burger">


  <div class="row justify-content-center text-center">
    <h3 class="col-12">Place your order:</h3>

    <form class="burger-form input-group justify-content-center col-12">
      <label for="burger-name"></label>
      <input type="text" id="burger-name" name="name" placeholder="Eat-Da-Burger">
      <div class="input-group-append">
        <button type="submit" class="btn add-btn">Add</button>
      </div>
    </form>


  </div>


  <div class="row justify-content-around text-center px-3">

    <div class="col-12 col-md-5">
      <h4>Burgers Ordered </h4>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/not-devoured devoured = true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>


    <div class="col-12 col-md-5">
      <h4>Burgers Devoured </h4>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/devoured devoured = false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>


</div>
{{!-- end of container --}}